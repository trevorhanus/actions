{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "lib": [
            "es2016",
            "es2015.collection",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
